<%= render(:partial => 'application/header') %>

  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="mt-5"><%= @page_title || '' %></h1>
        <div class="row">
          <div class="col-lg-12">
            <% if !flash[:notice].blank? %>
              <div class="alert alert-info" role="alert">
                <%= flash[:notice] %>
              </div>
            <% end %>

            <div class="row">
              <div class="col-lg-12">
              <%= yield %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <p>&copy; All rights reserved!</p>
          </div>
        </div>
      </div>      
    </div>
  </body>
</html>
