<div class="row">
	<div class="col">
		<% @page_title = "User Login" %>

		<div class="card">
			<div class="card-header">
		  	Please login below
		  </div>
		  <div class="card-body">
		  	<p class="card-text"></p>

				<%= form_tag(home_attempt_login_path, :method => :post) do %>
					<div class="form-group">
						<%= label_tag(:username) %>
						<%= text_field_tag(:username, params[:username], :class => 'form-control') %>
					</div>
					<div class="form-group">
						<%= label_tag(:password) %>
						<%= password_field_tag(:password, params[:password], :class => 'form-control') %>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				<% end %>
			</div>
		</div>
	</div>
</div>